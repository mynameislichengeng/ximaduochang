<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/content_tv"
        android:layout_width="@dimen/dialog_common_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px202"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        style="@style/dialog_content_text_style"
        android:text="@string/songbook_adding_songs"
        />
    
    <LinearLayout 
        android:id="@+id/add_songs_info_lay"
        android:layout_width="@dimen/px1462"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/px99"
        >
        
        <TextView 
            android:id="@+id/song_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/yellow_songbook_dialog"
            android:textSize="@dimen/px56"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/px22"
            />
        
        <TextView 
            android:id="@+id/predict_remain_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow_songbook_dialog"
            android:layout_marginRight="@dimen/px180"
            android:textSize="@dimen/px56"
            />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="@dimen/px1462"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/px292"
        >
        
        <ProgressBar
            android:id="@+id/pb"
            style="@style/km_update_horizontal_progress_bar"
            android:layout_width="0dp"
            android:layout_height="@dimen/px27"
            android:layout_weight="1"
            android:max="100" />
        
        <TextView 
            android:id="@+id/progress_tv"
            android:layout_width="@dimen/px157"
            android:layout_height="wrap_content"
            style="@style/dialog_content_text_style"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/px50"
            android:text="0%"
            />
    </LinearLayout>

</LinearLayout>
