<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ListMarqueeTextView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    
   <ImageView 
	  android:id="@+id/song_list_item_tip_icon"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:layout_gravity="center_vertical"
	  android:visibility="gone"
	  />
    
    <com.evideo.kmbox.widget.common.AutoEnlargeTextView
		android:id="@+id/song_list_item_sn"
		android:layout_width="@dimen/px140"
		android:layout_height="wrap_content"
		android:paddingTop="@dimen/px21"
		android:paddingBottom="@dimen/px21"
		android:textColor="@color/text_white"
		android:gravity="center"
		android:textSize="@dimen/px39"
        />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">
            
	        <com.evideo.kmbox.widget.common.ListMarqueeTextView
	            android:id="@+id/song_list_item_song_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:gravity="center_vertical"
	            android:textSize="@dimen/px39"
	            android:textColor="@color/white"
	            android:singleLine="true"
	            android:maxWidth="@dimen/px900"
	            android:ellipsize="end"
	            ListMarqueeTextView:specWidth="@dimen/px750"
	            />
	  		<TextView
	            android:id="@+id/song_score_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/px39"
	            android:gravity="center_vertical"
	            android:layout_marginLeft="@dimen/px12"
	            android:layout_toRightOf="@id/song_list_item_song_name"
	            />
	        <TextView
	            android:id="@+id/song_local_exist_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/px39"
	            android:gravity="center_vertical"
	            android:layout_marginLeft="@dimen/px12"
	            android:layout_toRightOf="@id/song_score_tv"
	            />
	        <com.evideo.kmbox.widget.common.AutoShowTextView
	            android:id="@+id/song_list_item_singer_below"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/song_list_item_song_name"
	            android:layout_alignParentLeft="true"
	            android:gravity="center_vertical"
	            android:textSize="@dimen/px27"
	            android:textColor="@color/text_light_gray"
	            android:singleLine="true"
	            android:ellipsize="end"
	            android:visibility="gone"
	            />

		</RelativeLayout>	

        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical">

           <com.evideo.kmbox.widget.common.AutoHideTextView
		      android:id="@+id/song_list_item_singer"
		      android:layout_width="@dimen/px168"
		      android:layout_height="wrap_content"
		      android:textSize="@dimen/px27"
		      android:textColor="@color/text_light_gray"
		      android:gravity="left|center_vertical"
		      android:layout_alignParentRight="true"
		      android:singleLine="true"
		      android:ellipsize="end"
		      android:visibility="visible"
		      />  
			<View
			    android:layout_toRightOf="@id/song_list_item_singer"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    />
           
        </RelativeLayout>
		      

    </LinearLayout>
    
</LinearLayout>
