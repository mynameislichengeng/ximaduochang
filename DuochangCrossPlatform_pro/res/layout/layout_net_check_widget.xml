<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:gravity="center"
    android:orientation="horizontal" >
    
    
     <!-- <LinearLayout
        android:id="@+id/network_check_dialog_step7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px50"
        android:layout_marginLeft="@dimen/px50"
         android:layout_marginTop="@dimen/px10"
        android:gravity="center"
        android:orientation="horizontal" > -->

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/tip_icon"
            android:layout_width="@dimen/px32"
            android:layout_height="@dimen/px32"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
             />
        <TextView
            android:id="@+id/network_check_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px10"
            android:textColor="@color/common_confirm_dialog_normal_text_color"
            android:textSize="@dimen/px30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/px30"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/network_check_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:gravity="right|center_vertical"
                android:text="@string/network_check_unchecked"
                android:textColor="@color/common_confirm_dialog_normal_text_color"
                android:textSize="@dimen/px30" />
        </LinearLayout>
    
</LinearLayout>
