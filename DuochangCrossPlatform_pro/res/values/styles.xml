    <style name="dialog_content_text_style" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/dialog_content_text</item>
        <item name="android:textColor">@color/dialog_content_text_color</item>
    </style>

    <style name="btn_confirm_style" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/btn_blue_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dialog_btn_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btn_cancel_style" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/btn_blue_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dialog_btn_text</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="KmAppTheme" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
